{{- if eq .chezmoi.os "windows" }}
[cd]
    command = "pwsh"
[edit]
    command = "nvim"
[merge]
    command = "nvim"
    args = ["-d", "{{"{{ .Destination }}"}}", "{{"{{ .Source }}"}}", "{{"{{ .Target }}"}}"]
{{- else }}
# Uncomment to enable fish shell for "chezmoi cd"
# [cd]
